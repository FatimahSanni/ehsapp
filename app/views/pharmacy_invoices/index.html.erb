<h1>Listing Pharmacy Invoices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Consultant</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pharmacy_invoices.each do |pharmacy_invoice| %>
      <tr>
        <td><%= pharmacy_invoice.patient %></td>
        <td><%= pharmacy_invoice.consultant.name %></td>
        <td><%= pharmacy_invoice.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', pharmacy_invoice %></td>
        <td><%= link_to 'Edit', edit_pharmacy_invoice_path(pharmacy_invoice) %></td>
        <td><%= link_to 'Destroy', pharmacy_invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

