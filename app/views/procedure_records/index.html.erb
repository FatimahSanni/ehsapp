<p id="notice"><%= notice %></p>

<h1>Listing Procedure Records</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Consultant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedure_records.each do |procedure_record| %>
      <tr>
        <td><%= procedure_record.patient %></td>
        <td><%= procedure_record.consultant %></td>
        <td><%= link_to 'Show', procedure_record %></td>
        <td><%= link_to 'Edit', edit_procedure_record_path(procedure_record) %></td>
        <td><%= link_to 'Destroy', procedure_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

