<h1>Listing Optical Stocks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @optical_stocks.each do |optical_stock| %>
      <tr>
        <td><%= optical_stock.name %></td>
        <td><%= optical_stock.amount %></td>
        <td><%= optical_stock.category %></td>
        <td><%= link_to 'Show', optical_stock %></td>
        <td><%= link_to 'Edit', edit_optical_stock_path(optical_stock) %></td>
        <td><%= link_to 'Destroy', optical_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

