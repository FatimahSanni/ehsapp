<% flash.each do |val, msg| %>
<% if val == 'notice' %>
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<%= msg %>
</div>
<% else %>
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<%= msg %>
</div>
<% end %>
<% end %>