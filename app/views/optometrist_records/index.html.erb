<h1>Listing Optometrist Records</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Optometrist</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @optometrist_records.each do |optometrist_record| %>
      <tr>
        <td><%= optometrist_record.patient %></td>
        <td><%= optometrist_record.optometrist %></td>
        <td><%= optometrist_record.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', optometrist_record %></td>
        <td><%= link_to 'Edit', edit_optometrist_record_path(optometrist_record) %></td>
        <td><%= link_to 'Destroy', optometrist_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

