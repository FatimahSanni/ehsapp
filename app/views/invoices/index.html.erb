<h1>Listing Invoices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Patient Name</th>
      <th>Consultant</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.patient.mrn %></td>
        <td><%= invoice.patient.full_name %></td>
        <td><%= invoice.consultant.name %></td>
        <td><%= invoice.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
