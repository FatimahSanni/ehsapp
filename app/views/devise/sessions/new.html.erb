<br><br>
<div class="row devise">
	<div class="col-md-4 col-md-offset-4">
			<h2>Sign In</h2>
			<br>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :email, required: false, autofocus: true, input_html: {class: "login_input"} %>
			    <%= f.input :password, required: false, input_html: {class: "login_input"} %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Log in", {class: "btn btn-login"} %>
			  </div>
			<% end %>

			<em><%= render "devise/shared/links" %></em> 
		</div>
</div>

