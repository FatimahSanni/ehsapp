<h1>Listing Counsellors</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counsellors.each do |counsellor| %>
      <tr>
        <td><%= counsellor.name %></td>
        <td><%= link_to 'Show', counsellor %></td>
        <td><%= link_to 'Edit', edit_counsellor_path(counsellor) %></td>
        <td><%= link_to 'Destroy', counsellor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Counsellor', new_counsellor_path %>
